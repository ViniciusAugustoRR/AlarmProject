<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/card_alarm_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_alarm_maintitle"
        />

    <TextView
        android:id="@+id/card_alarm_maintitle"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="@id/card_alarm_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_alarm_image"
        app:layout_constraintBottom_toTopOf="@id/card_alarm_subtitle"

        tools:text="@string/app_name"
        />

    <TextView
        android:id="@+id/card_alarm_subtitle"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:textSize="17sp"

        app:layout_constraintStart_toStartOf="@id/card_alarm_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_alarm_maintitle"
        tools:text="@string/app_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>